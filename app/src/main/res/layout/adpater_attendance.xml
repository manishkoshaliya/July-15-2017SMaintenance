<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/textcolordasbg"
    android:layout_height="65dp">

    <ListView
        android:visibility="gone"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <LinearLayout
        android:id="@+id/llItemHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvItemid"
            style="@style/TextHeaderGreenBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ITEM CODE"
            android:textColor="@color/textcolorwhite" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new"></ImageView>

        <TextView
            android:id="@+id/tvItemType"
            style="@style/TextHeaderGreenBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ITEM TYPE"
            android:textColor="@color/textcolorwhite"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new"
            android:visibility="visible"></ImageView>

        <TextView
            android:id="@+id/tvItemCode"
            style="@style/TextHeaderGreenBG"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ITEM CODE"
            android:textColor="@color/textcolorwhite" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvLoadQty"
            style="@style/TextHeaderGreenBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Load Qty"
            android:textColor="@color/textcolorwhite" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvUsedQty"
            style="@style/TextHeaderGreenBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Used Qty"
            android:textColor="@color/textcolorwhite" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvUOM"
            style="@style/TextHeaderGreenBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cases"
            android:textColor="@color/black"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvRemainedQty"
            style="@style/TextHeaderGreenBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Remained Qty"
            android:textColor="@color/textcolorwhite" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvReturnedQty"
            style="@style/TextHeaderGreenBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Returned Qty"
            android:textColor="@color/textcolorwhite" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivCheckAllItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_weight="0"
            android:src="@drawable/check_normal"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>